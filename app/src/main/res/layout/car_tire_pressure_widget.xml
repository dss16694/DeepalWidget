<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="428dp"
    android:layout_height="140dp"
    android:background="#00ffffff"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="6dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rftiretv2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="2.45"
                    android:textColor="@color/widget_text_color"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=" Bar"
                    android:textColor="@color/widget_text_color"
                    android:textSize="22sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lftiretv2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="2.45"
                    android:textColor="@color/widget_text_color"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=" Bar"
                    android:textColor="@color/widget_text_color"
                    android:textSize="22sp" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/tire_car_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/dc_car" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="7dp"
                android:paddingStart="16dp"
                android:paddingEnd="20dp">

                <ImageView
                    android:id="@+id/rfwheel"
                    android:layout_width="28dp"
                    android:layout_height="14dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/dc_error" />

                <ImageView
                    android:id="@+id/lfwheel"
                    android:layout_width="28dp"
                    android:layout_height="14dp"
                    android:layout_gravity="bottom"
                    android:scaleType="centerInside"
                    android:src="@drawable/dc_normal" />

                <ImageView
                    android:id="@+id/rrwheel"
                    android:layout_width="28dp"
                    android:layout_height="14dp"
                    android:layout_gravity="end"
                    android:scaleType="centerInside"
                    android:src="@drawable/dc_normal" />

                <ImageView
                    android:id="@+id/lrwheel"
                    android:layout_width="28dp"
                    android:layout_height="14dp"
                    android:layout_gravity="end|bottom"
                    android:scaleType="centerInside"
                    android:src="@drawable/dc_warning" />
            </FrameLayout>


        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rrtiretv2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="2.45"
                    android:textColor="@color/widget_text_color"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=" Bar"
                    android:textColor="@color/widget_text_color"
                    android:textSize="22sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lrtiretv2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="2.45"
                    android:textColor="@color/widget_text_color"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=" Bar"
                    android:textColor="@color/widget_text_color"
                    android:textSize="22sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>